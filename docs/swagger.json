{
  "swagger": "2.0",
  "info": {
    "description": "API для управления аутентификацией и пользователями.",
    "version": "1.0.0",
    "title": "Auth and User API"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "tags": [
    {
      "name": "Auth",
      "description": "Операции, связанные с аутентификацией"
    },
    {
      "name": "Users",
      "description": "Операции, связанные с пользователями"
    }
  ],
  "schemes": ["http"],
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "Введите токен в формате: Bearer {token}"
    }
  },
  "security": [
    {
      "Bearer": []
    }
  ],
  "paths": {
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Авторизация пользователя",
        "description": "Позволяет пользователю войти в систему.",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Данные для входа",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UserLogin"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Успешная авторизация",
            "schema": {
              "$ref": "#/definitions/AuthToken"
            }
          },
          "401": {
            "description": "Ошибка авторизации — неверные учетные данные",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Неправильный email или пароль"
                }
              }
            }
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Регистрация нового пользователя",
        "description": "Регистрация нового пользователя в системе.",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Данные для регистрации",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UserRegistration"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Успешная регистрация",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },
    "/auth/refresh": {
      "post": {
        "tags": ["Auth"],
        "summary": "Обновление токена",
        "description": "Обновление access токена с использованием refresh токена.",
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": "Новый access и refresh токены",
            "schema": {
              "$ref": "#/definitions/AuthToken"
            }
          },
          "401": {
            "description": "Ошибка — недействительный refresh токен",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Refresh токен недействителен или отсутствует"
                }
              }
            }
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": ["Auth"],
        "summary": "Выход из системы",
        "description": "Выход пользователя из системы.",
        "responses": {
          "204": {
            "description": "Успешный выход"
          },
          "401": {
            "description": "Ошибка авторизации — неверный токен",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Неверный или отсутствующий токен"
                }
              }
            }
          }
        }
      }
    },
    "/auth/logout/all": {
      "post": {
        "tags": ["Auth"],
        "summary": "Выход со всех устройств",
        "description": "Выход пользователя со всех устройств.",
        "responses": {
          "204": {
            "description": "Успешный выход со всех устройств"
          },
          "401": {
            "description": "Ошибка авторизации — неверный токен",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Неверный или отсутствующий токен"
                }
              }
            }
          }
        }
      }
    },
    "/auth/forgot-password": {
      "post": {
        "tags": ["Auth"],
        "summary": "Отправка email для восстановления пароля",
        "description": "Отправка письма для восстановления пароля на почту.",
        "consumes": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Email для восстановления пароля",
            "required": true,
            "schema": {
              "$ref": "#/definitions/PasswordEmail"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Письмо отправлено"
          }
        }
      }
    },
    "/auth/change-password": {
      "post": {
        "tags": ["Auth"],
        "summary": "Смена пароля",
        "description": "Изменение пароля авторизованного пользователя.",
        "consumes": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Данные для смены пароля",
            "required": true,
            "schema": {
              "$ref": "#/definitions/PasswordChange"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Пароль успешно изменен"
          },
          "401": {
            "description": "Ошибка авторизации — неверный токен",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Неверный или отсутствующий токен"
                }
              }
            }
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": ["Users"],
        "summary": "Получение списка пользователей",
        "description": "Получение списка всех зарегистрированных пользователей. Требуется авторизация.",
        "security": [
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "description": "Количество пользователей на странице",
            "required": false,
            "type": "integer"
          },
          {
            "name": "page",
            "in": "query",
            "description": "Номер страницы",
            "required": false,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Список пользователей",
            "schema": {
              "$ref": "#/definitions/UserList"
            }
          },
          "401": {
            "description": "Ошибка авторизации — неверный токен",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Неверный или отсутствующий токен"
                }
              }
            }
          }
        }
      }
    },
    "/users/me": {
      "get": {
        "tags": ["Users"],
        "summary": "Получение информации о текущем пользователе",
        "description": "Возвращает данные текущего авторизованного пользователя.",
        "security": [
          {
            "Bearer": []
          }
        ],
        "responses": {
          "200": {
            "description": "Данные текущего пользователя",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "401": {
            "description": "Ошибка авторизации — неверный токен",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Неверный или отсутствующий токен"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Users"],
        "summary": "Обновление информации о текущем пользователе",
        "description": "Обновление данных текущего авторизованного пользователя.",
        "consumes": ["application/json"],
        "security": [
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Новые данные пользователя",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Информация обновлена",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "401": {
            "description": "Ошибка авторизации — неверный токен",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Неверный или отсутствующий токен"
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "UserLogin": {
      "type": "object",
      "required": ["email", "password"],
      "properties": {
        "email": {
          "type": "string",
          "example": "user@example.com"
        },
        "password": {
          "type": "string",
          "example": "password123"
        }
      }
    },
    "UserRegistration": {
      "type": "object",
      "required": ["email", "password", "name"],
      "properties": {
        "email": {
          "type": "string",
          "example": "user@example.com"
        },
        "password": {
          "type": "string",
          "example": "password123"
        },
        "name": {
          "type": "string",
          "example": "John Doe"
        }
      }
    },
    "AuthToken": {
      "type": "object",
      "properties": {
        "accessToken": {
          "type": "string",
          "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
        },
        "refreshToken": {
          "type": "string",
          "example": "dGhpcyBpcyBhIHJlZnJlc2ggdG9rZW4gZXhhbXBsZQ=="
        }
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "example": "123456"
        },
        "email": {
          "type": "string",
          "example": "user@example.com"
        },
        "name": {
          "type": "string",
          "example": "John Doe"
        }
      }
    },
    "UserList": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/User"
      }
    },
    "PasswordEmail": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "example": "user@example.com"
        }
      }
    },
    "PasswordChange": {
      "type": "object",
      "properties": {
        "oldPassword": {
          "type": "string",
          "example": "oldPassword123"
        },
        "newPassword": {
          "type": "string",
          "example": "newPassword123"
        }
      }
    }
  }
}
